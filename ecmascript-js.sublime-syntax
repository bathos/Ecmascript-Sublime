# This file acts as a proxy to the syntax definition. It serves as the entry point for when other syntaxes
#   embed `source.js`, then pushes the `source.es` scope onto the stack and loads the Ecmascript syntax.
name: Ecmascript
file_extensions: [ js, jsx, es, es6, mjs ]
scope: source.js

contexts:
  prototype:
    - include: scope:source.es#prototype
  main:
    - meta_scope: source.es
    - include: scope:source.es
