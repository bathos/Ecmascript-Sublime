      set: bindingObject_BEFORE_COLON
    - match: '({{octNum}})'
      scope: constant.numeric.octal.es
      captures:
        1: entity.name.method.es
        2: meta.numeric.prefix.es
      set: bindingObject_BEFORE_COLON
    - match: '({{hexNum}})'
