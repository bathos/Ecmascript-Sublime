    - match: '{{MAT_word_or_any_one_char}}'
      scope: invalid.illegal.token.es
      set: ae_NO_IN_GENERATOR_COMPREHENSION_AFTER_EXP_BODY
  ae_NO_IN_GENERATOR_COMPREHENSION_AFTER_EXP_BODY:
